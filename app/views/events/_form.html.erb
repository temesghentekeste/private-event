<%= render "shared/errors", obj: @event%>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7 mx-auto">
      <%= form_for @event do |f| %>
            <div class="form-group">
                <div class="">
                    <%= f.text_field :title,  class: "form-control", placeholder: "Event title" %>
                </div>
            </div>
            <div class="form-group">
                <div class="">
                    <%= f.text_area :description,rows: 3,  class: "form-control", placeholder: "Event description" %>
                </div>
            </div>

            <div class="form-group">
                <div class="">
                    <%= select_date Date.today, prefix: :start_datetime, class: 'form-control'%>
                </div>
                <div class="">
                    <%= select_date Date.today, prefix: :end_datetime, class: 'form-control'%>
                </div>
            </div>

          <div class="form-group">
              <%= f.submit class:"btn btn-primary font-weight-bold" %>
          </div>
        <% end %>
        <div class="col-xs-4 text-center mb-5">
            [ <%= link_to "Cancel request and return to posts listing", events_path, class: "text-info"%> ]
        </div>
    </div>
  </div>
</div>

